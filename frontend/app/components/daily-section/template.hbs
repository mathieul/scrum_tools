<div class="panel-heading clearfix">
  <h3 class="panel-title pull-left">{{content.label}}</h3>
  {{#unless edit}}
    {{#link-to 'daily-scrum.section' content class="btn btn-default pull-right"}}
      <i class="fa fa-pencil"></i>
      Edit
    {{/link-to}}
  {{/unless}}
</div>

{{#if edit}}
  <div class="bootcards-list">
    <div class="panel panel-default">
      <div class="list-group">
        {{#each content.dailyTasks as |task|}}
          {{#link-to 'daily-scrum.section.edit-task' task class="list-group-item"}}
            <p class="list-group-item-text">
              {{task.label}}
            </p>
          {{/link-to}}
        {{else}}
          {{#link-to 'daily-scrum.section.new-task' class="list-group-item"}}
            <p class="list-group-item-text">NONE</p>
          {{/link-to}}
        {{/each}}
      </div>
    </div>
  </div>
{{else}}
  <div class="table-responsive">
    <table class="table table-hover">
      <tbody>
        {{#each content.dailyTasks as |task|}}
          <tr>
            <td>{{task.label}}</td>
          </tr>
        {{else}}
          <tr>
            <td>NONE</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}
