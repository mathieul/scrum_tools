<div class="panel-heading clearfix">
  <h3 class="panel-title pull-left">{{content.label}}</h3>
  {{#if edit}}
    <div class="btn-group pull-right">
      {{#link-to 'daily-scrum.section.new-task' content class="btn btn-success"}}
        <i class="fa fa-plus"></i>
      {{/link-to}}
      {{#link-to 'daily-scrum.summary' class="btn btn-primary"}}
        <i class="fa fa-check"></i>
      {{/link-to}}
    </div>
  {{else}}
    {{#link-to 'daily-scrum.section' content class="btn btn-default pull-right"}}
      <i class="fa fa-pencil"></i>
    {{/link-to}}
  {{/if}}
</div>

{{#if edit}}
  <div class="list-group">
    {{#each content.dailyTasks as |task|}}
      {{#link-to 'daily-scrum.section.edit-task' task class="list-group-item"}}
        <p class="list-group-item-text">
          {{task.label}}
        </p>
      {{/link-to}}
    {{else}}
      {{#link-to 'daily-scrum.section.new-task' class="list-group-item"}}
        <p class="list-group-item-text">NONE</p>
      {{/link-to}}
    {{/each}}
  </div>
{{else}}
  <div class="table-responsive">
    <table class="table table-hover">
      <tbody>
        {{#each content.dailyTasks as |task|}}
          <tr>
            <td>{{task.label}}</td>
          </tr>
        {{else}}
          <tr>
            <td>NONE</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}
