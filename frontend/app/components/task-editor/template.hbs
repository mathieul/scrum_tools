<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">{{title}}</h3>
  </div>

  <div class="modal-body">
    <form class="form-horizontal" {{action "save" on="submit"}}>
      <div class="form-group col-sm-10 col-sm-offset-1">
        {{textarea value=content.label required="true" rows="6" class="form-control"}}
      </div>

      <div class="form-group col-sm-10 col-sm-offset-1">
        {{#unless content.isNew}}
          <button class="btn btn-danger" type="button" {{action "delete"}}>
            Delete
          </button>
        {{/unless}}
        <div class="pull-right">
          {{#link-to "daily-scrum.section" content.dailySection class="btn btn-default"}}
            Cancel
          {{/link-to}}
          <button class="btn btn-success" type="submit" {{bind-attr disabled="cannotSave"}}>
            Save
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
